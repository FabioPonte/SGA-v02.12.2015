        <ThemaMeritor:DataGridFiltro HorizontalAlignment="Right" Margin="0,129,10,0" x:Name="dataGridFiltro1" VerticalAlignment="Top" />
        <Label x:Name="label_Copy" VerticalAlignment="Top" Margin="10,99,0,0" HorizontalAlignment="Left" Content="Marca:"/>
        <TextBox x:Name="txt_marca" Width="435" VerticalAlignment="Top" Text="" TextWrapping="Wrap" Margin="82,102,0,0" Height="23" HorizontalAlignment="Left"/>
        <Label x:Name="label_Copy1" VerticalAlignment="Top" Margin="10,127,0,0" HorizontalAlignment="Left" Content="Fabricante:"/>
        <TextBox x:Name="txt_fabricante" Width="435" VerticalAlignment="Top" Text="" TextWrapping="Wrap" Margin="82,130,0,0" Height="23" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
