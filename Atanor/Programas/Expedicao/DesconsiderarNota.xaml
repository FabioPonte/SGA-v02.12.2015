<UserControl x:Class="Atanor.Programas.Expedicao.DesconsiderarNota"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Atanor.Programas.Expedicao"
             mc:Ignorable="d" 
              d:DesignHeight="495" d:DesignWidth="1040" 
             xmlns:my="clr-namespace:ThemaMeritor;assembly=ThemaMeritor" Background="White">
    <Grid>
        <Label x:Name="label" Content="Qual é o motivo para você desconsiderar esta nota?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18.667"/>
        <TextBox x:Name="txt_motivo" AcceptsReturn="True" Height="246" Margin="10,88,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lbl_nota" Content="Nota Fiscal: 1704" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="btn_salvar" Content="Salvar" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="154" Height="73" Click="btn_salvar_Click"/>

    </Grid>
</UserControl>
